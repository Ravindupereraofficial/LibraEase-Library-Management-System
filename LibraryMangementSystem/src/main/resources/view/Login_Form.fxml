<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.librarymanagementsystem.controller.login.LoginFormController"
            style="-fx-background-color: #f0f4f8; -fx-padding: 30px;">

   <children>
      <!-- Title Label -->
      <Label text="Login" layoutX="230.0" layoutY="30.0" style="-fx-font-size: 30px; -fx-text-fill: #2d3e50; -fx-font-weight: bold;" />

      <!-- Email Text Field -->
      <JFXTextField fx:id="emailTextField" layoutX="150.0" layoutY="100.0" promptText="Email"
                    style="-fx-text-fill: #2d3e50; -fx-prompt-text-fill: rgba(45, 62, 80, 0.5); -jfx-focus-color: #00aaff; -jfx-unfocus-color: rgba(45, 62, 80, 0.3); -fx-font-size: 14px; -fx-background-radius: 5px; -fx-background-color: white;" />

      <!-- Password Text Field -->
      <JFXTextField fx:id="passwordTextField" layoutX="150.0" layoutY="160.0" promptText="Password"
                    style="-fx-text-fill: #2d3e50; -fx-prompt-text-fill: rgba(45, 62, 80, 0.5); -jfx-focus-color: #00aaff; -jfx-unfocus-color: rgba(45, 62, 80, 0.3); -fx-font-size: 14px; -fx-background-radius: 5px; -fx-background-color: white;" />

      <!-- Login Button -->
      <JFXButton layoutX="150.0" layoutY="230.0" prefWidth="140.0" text="Login" onAction="#btnLoginOnAction"
                 style="-fx-background-color: #00aaff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-cursor: hand; -fx-padding: 10px;" />

      <!-- Signup Button -->
      <JFXButton layoutX="310.0" layoutY="230.0" prefWidth="140.0" text="Signup" onAction="#btnSignupOnAction"
                 style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-cursor: hand; -fx-padding: 10px;" />

      <!-- Footer Label -->
      <Label text="Â© 2025 Your Company" layoutX="220.0" layoutY="360.0" style="-fx-text-fill: rgba(45, 62, 80, 0.7); -fx-font-size: 12px;" />
   </children>
</AnchorPane>
